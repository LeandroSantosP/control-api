<html lang='en'>

<head>
   <meta http-equiv='X-UA-Compatible' content='IE=edge' />
   <meta name='viewport' content='width=device-width, initial-scale=1.0' />
   <title>Document</title>
</head>

<body>
   <style>
      * {
         margin: 0;
         padding: 0;
         box-sizing: border-box;
      }

      body {
         padding:
            14px;
         text-align: center;
         margin: 0.6rem;
         background-color: #111;
         color: #fff;
      }

      h1 {
         font-size: 1rem;
         font-weight: bold;
      }

      .wrapper-section-one {
         display: flex;
         align-items: center;
         text-align:
            start;
         justify-content: center;
         width: 100%;
         background-color: #fff;
         color: #111;
         font-size: 1rem;
         font-weight: 600;
         white-space: normal;
         border: 1px solid #111;
         padding: 5px;
         border-radius: 0.4rem;
      }

      .wrapper-section-one .subject {
         width: 100%;
         padding: 3px;
         border: 1px solid #111;
         border-radius: 0.4rem;
         font-weight: 300;
         word-wrap: break-word;
         overflow-wrap: break-word;
      }

      .wrapper-section-one .title {
         font-size: 2rem;
         font-weight: bold;
         width: 100%;
         text-align: center;

      }

      .author {
         position: absolute;
         right:
            2rem;
         top: 2rem;
         font-weight: bold;
         color: crimson;
         font-style: italic;
         background-color: #111;
         border-radius: 0.3rem;
         padding: 10px;
      }

      table {
         width: 100%;
         margin: 20px auto;
         text-align:
            center;
         table-layout: auto;
      }

      table,
      td,
      th {
         border-collapse:
            collapse;
      }

      th,
      td {
         padding: 10px;
         border: solid 1px;
         text-align:
            center;
      }

      .w {
         width: 350px;
      }
   </style>
   <section class='wrapper-section-one'>
      <div class='title'>
         <h1 class='title'>{{title}}</h1>
      </div>
      <h1 class='author'>Autor: {{author}}</h1>
      <span>Desc:</span>
      <p class="subject ">{{subject}}</p>
   </section>
   <table id='t'>
      <thead>
         <th>Transaction</th>
         <th>Tipo</th>
         <th>Data de Recebimento/Expiracao</th>
         <th>Date de criacao!</th>
      </thead>
      <tbody>
         {{#transactions}}
         <tr>
            <td class='w'>{{value}}
               R$
            </td>
            <td>{{type}}</td>
            <td>{{filingDate}}{{dueDate}}</td>
            <td>{{createAt}}</td>
         </tr>
         {{/transactions}}
      </tbody>
   </table>
</body>

</html>
