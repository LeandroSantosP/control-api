{
   "env": {
      "es2021": true,
      "node": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
   ],
   "rules": {
      "prefer-const": [
         "error",
         {
            "ignoreReadBeforeAssign": true
         }
      ],
      "@typescript-eslint/no-non-null-assertion": "off"
   }
}